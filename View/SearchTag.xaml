<UserControl x:Class="View.SearchTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="28"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="TagEnabled" Content="" Grid.Column="1" VerticalAlignment="Center" IsChecked="False" Margin="6,0,6,0"/>
        <Grid Margin="5,5,0,5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Rectangle Stroke="#FFC3C3C3" Grid.RowSpan="2" Fill="{DynamicResource {x:Static SystemColors.InfoBrushKey}}"/>
            <Label x:Name="Name" Content="Name" Margin="-2,-4,0,0"/>
            <Label x:Name="Id" Grid.Row="1" Margin="-2,-4,0,0" Content="Somenumber"/>
        </Grid>
    </Grid>
</UserControl>
