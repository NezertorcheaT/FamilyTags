<Window x:Class="View.NewTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Новый тег" Height="110" Width="300" MinWidth="300" MaxWidth="300" MinHeight="110" MaxHeight="110">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Name" TextWrapping="Wrap" Text="Въебал название" Margin="10,10,10,0"/>
        <Grid Grid.Row="1" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Ok" Content="ОК" Margin="0,0,5,0"/>
            <Button x:Name="Exit" Grid.Column="1" Content="Палундра" Margin="5,0,0,0"/>
        </Grid>

    </Grid>
</Window>
